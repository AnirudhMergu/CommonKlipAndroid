<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.anirudhmergu.commonklip.DashboardActivity"
    tools:showIn="@layout/app_bar_dashboard">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:paddingBottom="32dp"
                android:paddingTop="50dp"
                tools:layout_editor_absoluteY="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dashboard_label_id"
                        android:layout_width="119dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/heebo_light"
                        android:text="@string/id"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:typeface="sans" />

                    <TextView
                        android:id="@+id/dashboard_value_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/heebo"
                        android:text="@string/id_placeholder"
                        android:textAlignment="textStart"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        android:typeface="sans" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dashboard_label_passcode"
                        android:layout_width="119dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/heebo_light"
                        android:text="@string/passcode_label"
                        android:textAlignment="textStart"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:typeface="sans" />

                    <TextView
                        android:id="@+id/dashboard_value_passcode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/heebo"
                        android:text="@string/passcode_placeholder"
                        android:textAlignment="textStart"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        android:typeface="sans" />

                    <ImageView
                        android:id="@+id/regenerate_password_btn"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="right|center_vertical|end"
                        android:layout_marginStart="16dp"
                        android:contentDescription="@string/regenerate_password"
                        android:onClick="regeneratePassword"
                        app:srcCompat="@drawable/ic_sync" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:padding="32dp"
                    android:textAlignment="viewStart">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/cardview_background"
                        android:orientation="horizontal"
                        android:textAlignment="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:layout_weight="10"
                            android:fontFamily="@font/heebo"
                            android:padding="4dp"
                            android:text="@string/lorem_ipsum"
                            android:textAlignment="textStart"
                            android:typeface="sans" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="90"
                            android:gravity="center_vertical|center_horizontal|center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/copy_btn"
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:layout_gravity="right|center_vertical|end"
                                android:layout_marginBottom="4dp"
                                android:layout_marginTop="4dp"
                                android:contentDescription="@string/copy_button_description"
                                android:scaleType="centerInside"
                                app:srcCompat="@drawable/ic_clone" />

                            <ImageView
                                android:id="@+id/copy_btn3"
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:layout_gravity="right|center_vertical|end"
                                android:layout_marginBottom="4dp"
                                android:layout_marginTop="4dp"
                                android:contentDescription="@string/copy_button_description"
                                android:scaleType="centerInside"
                                app:srcCompat="@drawable/ic_trash" />
                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
